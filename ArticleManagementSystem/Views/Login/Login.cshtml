@model AMS.Models.LoginModels.LoginViewModel
@{
    Layout = "~/Views/Shared/_ShareLogin.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body {
            background-color: rgba(200, 200, 200, 0.8); /* Adjust the alpha value for transparency */
        }

        .container-fluid {
            padding: 0;
        }

        .background_image {
            background-color: transparent; /* Set background color to transparent */
        }

        /* Add any additional styling as needed */
    </style>
</head>
<body>

    <form id="Login-form" method="post" action="@Url.Action("ValidateUser", "Login")">
        <div class="container-fluid">
            <div class="row" style="padding-top: 80px">
                <div class="col-md-6 background_image">
                    <img class="img-fluid" src="~/images/Login.png" alt="login-image" />
                </div>
                <div class="col-md-6" style="padding-top: 80px">
                    <!-- LOGIN FORM HERE -->
                    <div class="form-group">
                        <div class="form-label-group">
                            <label class="form-label required">UserName</label>
                            <input type="email" class="form-control" placeholder="Enter email" asp-for="UserName" />
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label required">Password</label>
                        <input type="password" class="form-control" placeholder="Password" asp-for="Password" />
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        <a href="@Url.Action("ForgotPassword", "Login")">Forgot Password</a>
                    </div>
                    <button type="submit" class="btn btn-primary btn-md">Submit</button>
                    <div class="mt-3">
                        Don't have an account? <a href="@Url.Action("Register", "Login")">Sign up</a>
                    </div>

                </div>
            </div>
        </div>
    </form>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

</body>
</html>
